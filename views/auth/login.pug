extends ../layouts/common.pug
block content
    h1 Login
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/auth/login", method="POST")
        .form-group
            label(for="email") Email
            input#name.form-control(type="text", name="email" value=value ? value.email : '') 
        .form-group
            label(for="password") Password
            input#phone.form-control(type="text", name="password" value=value? value.password : '')
        button(class="btn btn-primary") Login